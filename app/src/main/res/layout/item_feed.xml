<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="6dp"
    android:background="@drawable/item_main_bg">

    <ImageView
        android:id="@+id/img_feed_main"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/image_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_feed_main_titile"
        android:layout_width="50dp"
        android:layout_height="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_bg"
        app:layout_constraintStart_toEndOf="@+id/img_feed_main"
        app:layout_constraintTop_toTopOf="@+id/img_feed_main" />

    <TextView
        android:id="@+id/tv_feed_main_desc"
        android:layout_width="150dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_bg"
        app:layout_constraintStart_toStartOf="@+id/tv_feed_main_titile"
        app:layout_constraintTop_toBottomOf="@+id/tv_feed_main_titile" />
</android.support.constraint.ConstraintLayout>